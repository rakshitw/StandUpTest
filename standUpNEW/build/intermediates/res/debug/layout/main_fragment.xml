<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cloudteams="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08090A"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayoutCurrentActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="60dp"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textViewCurrentActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <com.xrci.standup.views.CircleView
                android:id="@+id/circleViewCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:paddingTop="5dp"
                cloudteams:circleGap="0dp"
                cloudteams:circleRadius="40dp"
                cloudteams:fillColor="#15A083"
                cloudteams:strokeWidth="0dp"
                cloudteams:text_line1="0"
                cloudteams:text_line2="mins" />

            <TextView
                android:id="@+id/textViewCurrentActivityTimePeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Since xx:xx "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutStepActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textViewStepActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <com.xrci.standup.views.CircleView
                android:id="@+id/circleViewTodayStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:paddingTop="5dp"
                cloudteams:circleGap="0dp"
                cloudteams:circleRadius="40dp"
                cloudteams:fillColor="#15A083"
                cloudteams:strokeWidth="0dp"
                cloudteams:text_line1="0"
                cloudteams:text_line2="steps" />

            <TextView
                android:id="@+id/textViewSteptActivityTimePeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Since 00:00 "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayoutTimelineArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


        </LinearLayout>
    </ScrollView>


</LinearLayout>
